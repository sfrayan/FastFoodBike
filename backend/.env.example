# ========================================
# FastFoodBike Backend Configuration
# ========================================

# === ENVIRONNEMENT ===
NODE_ENV=development
PORT=5000
HOST=localhost

# === BASE DE DONNÉES ===
# MongoDB Atlas (cloud)
DATABASE_URL=mongodb+srv://username:password@cluster.mongodb.net/fastfoodbike?retryWrites=true&w=majority

# MongoDB Local
# DATABASE_URL=mongodb://localhost:27017/fastfoodbike

# PostgreSQL (optionnel)
# DATABASE_URL=postgresql://user:password@localhost:5432/fastfoodbike

# === AUTHENTIFICATION JWT ===
JWT_SECRET=your_super_secret_jwt_key_change_this_in_production_minimum_32_characters
JWT_EXPIRES_IN=7d
JWT_REFRESH_SECRET=your_refresh_secret_key_minimum_32_characters
JWT_REFRESH_EXPIRES_IN=30d

# === PAIEMENT STRIPE ===
# https://stripe.com
STRIPE_PUBLIC_KEY=pk_test_...
STRIPE_SECRET_KEY=sk_test_...
STRIPE_WEBHOOK_SECRET=whsec_...

# === CACHE REDIS ===
# Redis Cloud ou local
REDIS_URL=redis://:password@localhost:6379/0
# ou pour Redis Cloud
# REDIS_URL=redis://default:password@redis-service.redis.cloud:12345

# === MESSAGE QUEUE RABBITMQ ===
# CloudAMQP ou local
RABBITMQ_URL=amqp://guest:guest@localhost:5672
# ou pour CloudAMQP
# RABBITMQ_URL=amqp://user:password@rabbit-service.cloudamqp.com/vhost

# === EMAIL SMTP ===
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASS=your-app-specific-password
SMTP_FROM=noreply@fastfoodbike.com

# === CARTES (Google Maps) ===
# https://console.cloud.google.com
GOOGLE_MAPS_API_KEY=your_google_maps_api_key

# === LOGS ===
LOG_LEVEL=debug
LOG_FORMAT=json

# === SECURITÉ ===
CORS_ORIGIN=http://localhost:3000,https://fastfoodbike.com
RATES_LIMIT_WINDOW_MS=900000
RATES_LIMIT_MAX_REQUESTS=100

# === NOTIFICATIONS ===
FCM_PROJECT_ID=
FCM_PRIVATE_KEY=
FCM_CLIENT_EMAIL=

# === ANALYTICS ===
SENTRY_DSN=
DATADOG_API_KEY=

# === APP ===
APP_NAME=FastFoodBike
APP_VERSION=1.0.0
